<body class="bg-gray-900 text-gray-200 font-sans">

    <div class="container mx-auto p-10 min-h-screen">
        <a class="text-indigo-400 hover:text-indigo-300 font-semibold mb-10 inline-block" href="/">Go back to home</a>


        <form action="/edit/<%=filename%>" method="post" class="space-y-4">
            <input type="text" name="name" placeholder="previous name" value="<%= filename %>" readonly
                class="w-full p-3 rounded-md bg-gray-700 text-gray-200 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-200 " >
            <input type="text" name="newname" placeholder="New name"
                class="w-full p-3 rounded-md bg-gray-700 text-gray-200 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-200">
            <input type="submit" value="Change Name"
                class="w-full bg-indigo-600 hover:bg-indigo-500 text-gray-100 font-bold py-3 rounded-md cursor-pointer transition duration-200">
        </form>


    </div>

