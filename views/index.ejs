<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-gray-200 font-sans">

    <!-- Page Container -->
    <div class="container mx-auto p-6">

        <!-- Header -->
        <header class="text-center mb-10">
            <h1 class="text-5xl font-extrabold text-gray-50 mb-2">Task Manager</h1>
            <p class="text-gray-400 text-lg">Organize your tasks efficiently</p>
        </header>

        <!-- Task Creation Form -->
        <section class="bg-gray-800 rounded-lg p-8 max-w-lg mx-auto shadow-lg mb-8">
            <h2 class="text-3xl font-semibold text-gray-100 mb-5">Add a New Task</h2>
            <form action="/create" method="post" class="space-y-4">
                <input type="text" name="title" placeholder="Task Title" class="w-full p-3 rounded-md bg-gray-700 text-gray-200 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-200">
                <textarea name="details" rows="4" placeholder="Task Details" class="w-full p-3 rounded-md bg-gray-700 text-gray-200 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-200"></textarea>
                <input type="submit" value="Create Task" class="w-full bg-indigo-600 hover:bg-indigo-500 text-gray-100 font-bold py-3 rounded-md cursor-pointer transition duration-200">
            </form>
        </section>

        <!-- Task Display Section -->
        <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="bg-gray-800 rounded-lg p-6 shadow-lg transition-transform transform hover:scale-105">
                        <h3 class="text-2xl font-semibold text-gray-100 mb-2"><%= val %></h3>
                        <p class="text-gray-400 mb-4">Detailed information about this task.</p>
                        <div class="flex justify-between mt-4">
                            <a href="/file/<%= val %>" class="text-sm font-semibold text-indigo-400 hover:text-indigo-300 transition-colors">Read More</a>
                            <div>
                            <a href="/edit/<%= val %>" class="text-sm font-semibold text-indigo-400 hover:text-indigo-300 transition-colors">Edit</a>
                            <a href="/delete/<%= val %>" class="text-sm font-semibold text-red-400 hover:text-red-300 transition-colors p-5">Delete</a>
                            </div>    
                        </div>     
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-center text-gray-500 text-lg font-medium w-full mt-8">No Tasks Yet</h3>
            <% } %>
        </section>
    </div>

    <!-- Footer -->
    <footer class="mt-12 text-center text-gray-500 border-t border-gray-700 py-4">
        <p>Â© 2024 Task Manager. All rights reserved.</p>
    </footer>

</body>
</html>
